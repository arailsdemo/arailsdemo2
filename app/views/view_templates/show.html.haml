%p#notice= notice

%p
  %b= "#{t('view_template.name')}:"
  = @view_template.name
%p
  %b= "#{t('view_template.prefix')}:"
  = @view_template.prefix
%p
  %b= "#{t('view_template.partial')}:"
  = @view_template.partial
%p
  %b= "#{t('view_template.source')}:"
  = @view_template.source
%p
  %b= "#{t('view_template.locale')}:"
  = @view_template.locale
%p
  %b= "#{t('view_template.formats')}:"
  = @view_template.formats
%p
  %b= "#{t('view_template.handlers')}:"
  = @view_template.handlers

%h3 Previous Template Source Code Versions:
%ul
  - @view_template.versions.reverse.each do |version|
    %li.view_template_version
      %b= "#{t('view_template.source')}:"
      = version.source
      = link_to t("view_template.links.revert"), view_template_path(@view_template, :revert => version.version), :method => :put

= link_to t("view_template.links.edit"), edit_view_template_path(@view_template)
\|
= link_to t("view_template.links.index"), view_templates_path
